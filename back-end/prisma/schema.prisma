// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  code        Int           @id @default(autoincrement())
  description String
  sellPrice   Decimal       @map("sell_price")
  unit        String
  stockAmount Int
  solds       ProductSell[]

  @@map("products")
}

model ProductSell {
  sell     Sell @relation(fields: [sellCode], references: [code])
  sellCode Int  @map("sell_code")

  product     Product @relation(fields: [productCode], references: [code])
  productCode Int

  amount     Int
  totalPrice Decimal

  @@id([sellCode, productCode])
  @@map("product_sell")
}

model Sell {
  code      Int           @id @default(autoincrement())
  client    String
  timestamp DateTime      @default(now())
  products  ProductSell[]

  @@map("sells")
}
