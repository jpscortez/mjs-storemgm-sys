{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Node 20",
	"_version": "20.1.0",
	"compilerOptions": {
		"lib": ["es2023"],
		"outDir": "./dist", // The compiled JavaScript will go here
		"rootDir": "./src", // Your TypeScript source files are in ./src
		"module": "node16",
		"target": "es2022",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "node16",
		"noImplicitAny": false
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts"], // Include TypeScript files in the src directory
	"exclude": ["node_modules", "dist"] // Exclude node_modules and dist folder
}
